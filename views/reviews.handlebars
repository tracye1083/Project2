<div class= "container">    
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right nav_bar">
        {{#if loggedIN}}
            <li><a href="/logout">Logout</a></li>
        {{else}}
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Sign Up</a></li>
        {{/if}}
            <li><a href="/">Home</a></li>
        </ul>
    </div>
        <div class="container-fluid main_body">
            <h1>Hello, {{userFirstName}}</h1>
            <p>Here is a listing of reviews for: {{company.name}} </p>
            <form >
              <div class="form-group">
                <a href="/api/reviews/addReview/{{company.id}}" class="btn btn-block btn-primary link_btn">Add Review</a> 
              </div>
            </form>
            <div class="row">
               
                <div class="row mb-4 project">
                <div class="col-md-5">
                    <h2>
                    <!-- Call helper function with triple brackets to render the emoji span as HTML -->
                    {{{get_emoji}}}
                    {{company.name}}
                    </h2>
                </div>
                <div class="col-md-7">
                    <p>
                    {{company.category}} Rating: {{company.rating}}
                    </p>
                </div>
                </div>
                    {{#each company.reviews as |review| }}
                    {{> review-details}}
                    {{/each}}

               </div>

             </div>
            
        </div>
    </div>

</div>
    <!-- /#wrapper -->

